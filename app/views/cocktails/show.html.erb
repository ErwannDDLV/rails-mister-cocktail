<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1 class='text-center'>recette</h1>
      <h3 class='text-center'><%= @cocktail.name %></h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %> : <%= dose.description %> - <%= link_to "delete", dose_path(dose), method: :delete %></li>
        <% end %>
      </ul>
      <div class='dosesform'>
        <%= render 'doses_form' %>
      </div>
    </div>
  </div>
</div>



