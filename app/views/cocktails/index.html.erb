<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1 class="text-center"> All cocktails</h1>
      <% @cocktails.each do |cocktail| %>
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <ul>
                <li class="card cocktails-list">
                  <%= link_to cocktail.name, cocktail_path(cocktail) %>
                  <%= link_to "delete", cocktail_path(cocktail), method: :delete, class: 'btn-medium' %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div>
        <%= link_to 'Create Cocktail', new_cocktail_path, class: 'btn-treehouse'%>
      </div>
      <div>
        <%= cl_image_tag("vi4lqn6y98sxfbvpmufa.jpg", width: 286, crop: "scale") %>
      </div>
    </div>
  </div>
</div>




