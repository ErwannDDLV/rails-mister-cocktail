
<h1 class="text-center"> All cocktails</h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card cocktails-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.path, width: 200, height: 300, crop: :fill if cocktail.photo %>')">
          <div class="card-category"><%= cocktail.name %></div>
          <div class="card-description">
            <h2>Some stuff</h2>
            <p>Very cool stuff, useful and smart</p>
          </div>
          <%= link_to cocktail_path(cocktail), class: "card-link" %>
        </div>
        <%= link_to "delete", cocktail_path(cocktail), method: :delete, class: 'btn-medium' %>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-12">
      <div class="card-category">
        <%= cl_image_tag("vi4lqn6y98sxfbvpmufa.jpg", width: 286, crop: "scale") %>
      </div>
      <%= link_to 'Create Cocktail', new_cocktail_path, class: 'btn-treehouse'%>
    </div>
  </div>
</div>
