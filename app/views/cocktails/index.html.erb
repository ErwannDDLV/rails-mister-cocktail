
<h1 class="text-center"> All cocktails</h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card cocktails-list">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%= link_to "delete", cocktail_path(cocktail), method: :delete, class: 'btn-medium' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-12">
      <div class="card-category">
        <%= cl_image_tag("vi4lqn6y98sxfbvpmufa.jpg", width: 286, crop: "scale") %>
        <%= link_to 'Create Cocktail', new_cocktail_path, class: 'btn-treehouse'%>
      </div>
    </div>
  </div>
</div>

